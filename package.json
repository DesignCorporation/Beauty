{
  "name": "@beauty-platform/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Beauty Platform - Enterprise SaaS for beauty salons",
  "packageManager": "pnpm@10.24.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "core/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm --filter auth-service dev\" \"pnpm --filter salon dev\" \"pnpm --filter admin dev\"",
    "dev:all": "concurrently \"pnpm --filter auth-service dev\" \"pnpm --filter api-gateway dev\" \"pnpm --filter salon-api dev\" \"pnpm --filter admin dev\" \"pnpm --filter salon dev\" \"pnpm --filter notification-service dev\"",
    "build": "pnpm build:core && pnpm build:services && pnpm build:apps",
    "build:all": "pnpm --filter @beauty/shared build && pnpm --filter @beauty-platform/ui build && pnpm --filter @beauty-platform/shared-middleware build && pnpm --filter @beauty-platform/database build && pnpm --recursive --filter './services/*' build && pnpm --recursive --filter './apps/*' build",
    "build:core": "pnpm --filter @beauty/shared build && pnpm --filter @beauty-platform/ui build && pnpm --filter @beauty-platform/shared-middleware build && pnpm --filter @beauty-platform/database build",
    "build:services": "pnpm --recursive --filter './services/*' build",
    "build:apps": "pnpm --recursive --filter './apps/*' build",
    "start:all": "concurrently \"pnpm --filter auth-service start\" \"pnpm --filter api-gateway start\" \"pnpm --filter salon-api start\" \"pnpm --filter notification-service start\"",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "lint:check": "pnpm --recursive --stream lint",
    "type-check": "pnpm --recursive type-check",
    "typecheck": "pnpm --recursive typecheck",
    "test": "nve 20 vitest",
    "test:ui": "nve 20 vitest --ui",
    "test:run": "nve 20 vitest run",
    "test:coverage": "nve 20 vitest run --coverage",
    "test:workspace": "pnpm --recursive test",
    "test:coverage:workspace": "pnpm --recursive test:coverage",
    "test:e2e": "pnpm --recursive test:e2e",
    "clean": "pnpm --recursive clean && rm -rf node_modules/.cache",
    "postinstall": "cd core/database && npx prisma generate",
    "db:migrate": "cd core/database && npx prisma migrate deploy",
    "db:seed": "cd core/database && npx prisma db seed",
    "db:seed-existing": "npx tsx scripts/seed-existing-salons.ts",
    "db:reset": "cd core/database && npx prisma migrate reset",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "health:check": "curl -f http://localhost:6020/health && curl -f http://localhost:6021/health",
    "ai": "./tools/gemini-cli/beauty-ai.sh",
    "ai:setup": "./tools/gemini-cli/setup.sh",
    "ai:test": "./tools/gemini-cli/test-commands.sh",
    "ai:docs": "./tools/gemini-cli/generate-docs.sh",
    "ai:review": "./tools/gemini-cli/code-review.sh",
    "ai:refactor": "./tools/gemini-cli/refactor-assistant.sh",
    "ai:interactive": "cd /root/beauty-platform && gemini",
    "ts:analyze": "bash scripts/fix-typescript-errors.sh",
    "ts:fix": "npx tsx scripts/auto-fix-typescript.ts",
    "ts:fix:unused": "npx tsx scripts/auto-fix-typescript.ts --type=unused",
    "ts:fix:types": "npx tsx scripts/auto-fix-typescript.ts --type=types",
    "ts:fix:returns": "npx tsx scripts/auto-fix-typescript.ts --type=returns",
    "ts:fix:dry-run": "npx tsx scripts/auto-fix-typescript.ts --dry-run",
    "context7": "npx @upstash/context7-mcp",
    "ui:verify": "pnpm --filter @beauty-platform/ui clean && pnpm --filter @beauty-platform/ui build && pnpm --filter @beauty-platform/ui typecheck"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^4.17.21",
    "@types/glob": "^9.0.0",
    "@types/node": "^20.19.10",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@upstash/context7-mcp": "^1.0.26",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "nve": "^18.0.3",
    "prettier": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vitest": "^0.34.6"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.0",
      "@types/react-dom": "^18.3.0",
      "@types/node": "20.19.10",
      "@types/express-serve-static-core": "^4.19.7"
    }
  },
  "keywords": [
    "beauty",
    "salon",
    "crm",
    "booking",
    "saas",
    "multi-tenant"
  ],
  "author": "DesignCorp",
  "license": "UNLICENSED",
  "dependencies": {
    "@hello-pangea/dnd": "^16.5.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@types/csurf": "^1.11.5",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "express": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.7.5"
  }
}
