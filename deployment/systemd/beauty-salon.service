[Unit]
Description=Beauty Platform - Salon frontend (prod)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/beauty-dev/apps/salon
Environment=NODE_ENV=production
Environment=PORT=7001
EnvironmentFile=/opt/beauty-dev/.env.production
ExecStart=/usr/bin/node .output/server/index.mjs
Restart=on-failure
RestartSec=10s
StandardOutput=journal
StandardError=journal
SyslogIdentifier=beauty-salon

[Install]
WantedBy=multi-user.target
